<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:color">#000000</item>
        <item name="colorAccent">#000000</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#5fa3d0</item>
    </style>

    <style name="EditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorControlHighlight">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="EditTextThemeDark">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#808080</item>
        <item name="colorControlActivated">#808080</item>
        <item name="colorControlHighlight">#808080</item>
        <item name="colorAccent">#808080</item>
        <item name="android:textColorHint">#808080</item>
        <item name="android:textColor">#808080</item>
        <item name="android:tint">#808080</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#ffff00</item>
        <item name="colorControlActivated">@color/backgroundSideMenuSelected</item>
    </style>

</resources>
